<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" 
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
         http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" 
         version="3.0">

    <!-- Servlet de cadastro de setores -->
    <servlet>
        <servlet-name>SetorController</servlet-name>
        <servlet-class>controller.SetorController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>SetorController</servlet-name>
        <url-pattern>/SetorController</url-pattern>
    </servlet-mapping>

    <!-- Servlet de cadastro de questões -->
    <servlet>
        <servlet-name>QuestaoController</servlet-name>
        <servlet-class>controller.QuestaoController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>QuestaoController</servlet-name>
        <url-pattern>/QuestaoController</url-pattern>
    </servlet-mapping>

    <!-- Servlet de cadastro de avaliações -->
    <servlet>
        <servlet-name>AvaliacaoController</servlet-name>
        <servlet-class>controller.AvaliacaoController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AvaliacaoController</servlet-name>
        <url-pattern>/AvaliacaoController</url-pattern>
    </servlet-mapping>

    <!-- Página inicial do sistema -->
    <welcome-file-list>
        <welcome-file>Index.jsp</welcome-file>
    </welcome-file-list>

</web-app>
